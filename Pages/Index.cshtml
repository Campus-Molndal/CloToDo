@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<h3>Add ToDo</h3>

<form> 
    <input type="text" placeholder="Add a new ToDo" />
    <button type="submit">Add</button> 
</form>

<h3>ToDo List</h3>

<ul>
    @foreach (var item in Model.TodoItems)
    {
        <li>@item.Title</li>
    }
</ul>